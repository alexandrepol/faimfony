{% extends "FaimfonyBundle:Default:layout.html.twig" %}

{% block content %}
    <button type="button" class="btn btn-outline-primary"><a href="{{ path('profil_restau', {'id':meal.restaurant.id}) }}"><i class="fa fa-chevron-left" aria-hidden="true"></i>
            Retour</a></button>
    <h2 class="title title--xxl type-center">Editer mon plat {{ meal.name }}</h2>
    {% if app.session.flashBag.has('notice') %}
        <div class="alert-msg">
            {% for msg in app.session.flashBag.get('notice') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="grid__column type-center grid--justify-center">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <img src="{{ asset(meal.image.url) }}" alt="{{ meal.image.alt }}" class="img-thumbnail" style="width:200px;"><br>
        <button type="submit" class="button button--filled button--primary type-center">Valider formulaire</button>
        {{ form_end(form) }}

    </div>


{%  endblock %}