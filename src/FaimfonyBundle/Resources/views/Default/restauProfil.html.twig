    {#<a href="{{ path('user_edit') }}"><i class="fa fa-user" aria-hidden="true"></i></a>#}
    {#{% if is_granted('ROLE_ADMIN') %}#}
    {#<a href="{{ path('admin ') }}"><i class="fa fa-cog" aria-hidden="true"></i></a>#}
    {#{% endif %}#}
    {#</div>#}


<button type="button" class="btn btn-outline-primary"><a href="{{ path('user_profil') }}"><i class="fa fa-chevron-left" aria-hidden="true"></i> Retour</a></button>
    <h1>Fiche Resto</h1>
    <div class="block-infos-restau">
        <h2 class="page-header">Infos</h2>

        <h3>{{ restau.name }}</h3>
        <address>Adresse : {{ restau.address }}</address>
        <p><i class="fa fa-phone" aria-hidden="true"></i> <a href="tel:{{ restau.phone  }}">{{ restau.phone }}</a></p>
        <p>
            <h5>Horaires :</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Jour</th>
                        <th>Ouverture</th>
                        <th>Fermeture</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key,value in timetable %}
                        <tr>
                            <td>{{ key }}</td>
                            <td>{{ value[0] }}</td>
                            <td>{{ value[1] }}</td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </p>

        {% if userIsOwner %}
            <a class="btn btn-primary" href="/restaurant/edit/{{ id }}">Editer</a>
        {% endif %}

    </div>

    <div class="block-meals">
        <h2 class="page-header">Plats</h2>

        <div class="row">
            {% for meal in meals %}


                <div class="col-sm-6 col-md-4">
                    <div id="meal-{{ meal.id }}" class="thumbnail">
                        <img src="{{ asset(meal.image.url) }}" alt="{{ meal.image.alt }}">
                        <div class="caption">
                            <h3>{{ meal.name }}</h3>
                            <p>{{ meal.description }}</p>
                            <p>
                                <a href="{{ path('edit_meal', {'id':meal.id } ) }}" class="btn btn-primary" role="button"><i class="fa fa-pencil" aria-hidden="true"></i> Modifier</a>
                                <a href="{{ path('delete_meal', {'id':meal.id}) }}" class="btn btn-danger" role="button"><i class="fa fa-times" aria-hidden="true"></i> Supprimer</a></p>
                            </p>
                        </div>
                    </div>
                </div>


            {% endfor %}

            <div class="col-sm-6 col-md-4">

                <a class="btn btn-default btn-lg btn-block" href="{{ path('add_meal', {'id':restau.id}) }}"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter un plat</a>
            </div>

        </div>


    </div>


{% endblock %}

