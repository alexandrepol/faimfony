    <h1>Fiche Resto</h1>

    <div class="block-infos-restau">
        <h2 class="page-header">Infos</h2>

        {#<img src="{{ restau.urlPhoto }}">#}
        <h3>{{ restau.name }}</h3>
        <address>{{ restau.address }}</address>
        <p>{{ restau.phone }}</p>
        <p>{{ restau.timetable }}</p>

        {% if userIsOwner %}
            <a class="btn btn-primary" href="/restaurant/edit/{{ id }}">Editer</a>
        {% endif %}

    </div>

    <div class="block-meals">
        <h2 class="page-header">Plats</h2>

        <div class="row">


            {% for meal in meals %}


                <div class="col-sm-6 col-md-4">
                    <div id="meal-{{ meal.id }}" class="thumbnail">
                        <img src="http://placehold.it/350x150" alt="...">
                        <div class="caption">
                            <h3>{{ meal.name }}</h3>
                            <p>...</p>
                            <p><a href="/meal/edit/{{ meal.id }}" class="btn btn-primary" role="button"><i class="fa fa-pencil" aria-hidden="true"></i> Modifier</a></p>
                        </div>
                    </div>
                </div>


            {% endfor %}

            <div class="col-sm-6 col-md-4">

                <a class="btn btn-default btn-lg btn-block" href="/meal/create/{{ id }}"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter un plat</a>
            </div>

        </div>


    </div>


{% endblock %}

