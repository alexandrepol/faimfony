{% extends "FaimfonyBundle:Default:layout.html.twig" %}
{% block content %}
    <h4 class="title title--xxl type-center">Bienvenue {{ user.getFirstname() }}</h4>
    <div class="block-options">
        <a href="{{ path('user_edit') }}"><i class="fa fa-user" aria-hidden="true"></i></a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin ') }}"><i class="fa fa-cog" aria-hidden="true"></i></a>
        {% endif %}
    </div>

    <div class="block-search">
        <h5 class="title title--md type-center">J'ai faim!</h5>


    </div>
    <div class="block-favoris">
        <h5 class="title title--md type-center">Mes favoris</h5>

    </div>
    <div class="block-bestmeal">
        <h5 class="title title--md type-center">Les meilleurs plats</h5>

    </div>
    {% if user.getIsCooker() %}
        <div class="block-myrestaurants">
            <h5 class="title title--md type-center">Mes restaurants</h5>

            <div class="grid">


                {% for restau in restaus %}

                        <div class="grid__column grid__column--4 bg-color-primary">
                            <p>{{ restau.name }}</p>
                            <p>{{ restau.id }}</p>
                            <a href="/restaurant/{{ restau.id }}">Voir</a>
                        </div>



                {% endfor %}
            </div>

            <pre>

        {{ dump(restaus) }}

    </pre>
        </div>
    {% endif %}

{% endblock %}

